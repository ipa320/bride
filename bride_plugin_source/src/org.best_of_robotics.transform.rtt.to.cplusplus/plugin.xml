<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.best_of_robotics.transform.rtt.to.cplusplus.commands.category"
            name="RTT Tranformations">
      </category>
      <command
            categoryId="org.best_of_robotics.transform.rtt.to.cplusplus.commands.category"
            id="org.best_of_robotics.transform.rtt.to.cplusplus.commands.generateSource"
            name="Generate RTT Source">
      </command>
      <command
            categoryId="org.best_of_robotics.transform.rtt.to.cplusplus.commands.category"
            id="org.best_of_robotics.transform.rtt.to.cplusplus.commands.generateDeployment"
            name="Generate Deployment File">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.best_of_robotics.transform.rtt.to.cplusplus.handlers.RttTransformHandler"
            commandId="org.best_of_robotics.transform.rtt.to.cplusplus.commands.generateSource">
      </handler>
      <handler
            class="org.best_of_robotics.transform.rtt.to.cplusplus.handlers.CpfTransformHandler"
            commandId="org.best_of_robotics.transform.rtt.to.cplusplus.commands.generateDeployment">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.best_of_robotics.bride.menu?after=additions">
         <menu
               id="org.best_of_robotics.transform.rtt.to.cplusplus.menus.brideMenu"
               label="RTT">
            <command
                  commandId="org.best_of_robotics.transform.rtt.to.cplusplus.commands.generateSource"
                  id="org.best_of_robotics.transform.rtt.to.cplusplus.commands.generateSource">
            </command>
            <command
                  commandId="org.best_of_robotics.transform.rtt.to.cplusplus.commands.generateDeployment"
                  id="org.best_of_robotics.transform.rtt.to.cplusplus.commands.generateDeployment"
                  mnemonic="D">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.epsilon.common.dt.tool">
      <tool
            class="org.best_of_robotics.transform.rtt.to.cplusplus.tools.FeautreMapUtilTool"
            defaultName="FeautreMapUtilTool">
      </tool>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.best_of_robotics.bride.ui.category.newWizard"
            class="org.orocos.model.rtt.diagram.part.RttCreationWizard"
            icon="icons/obj16/RttDiagramFile.gif"
            id="org.best_of_robotics.transform.rtt.to.cplusplus.wizard.rttDiagram"
            name="RTT Model Diagram">
      </wizard>
      <wizard
            category="org.best_of_robotics.bride.ui.category.newWizard"
            class="org.best_of_robotics.transform.rtt.to.cplusplus.wizard.NewMergedRttModel"
            icon="icons/obj16/RttDiagramFile.gif"
            id="org.best_of_robotics.transform.rtt.to.cplusplus.wizard.NewRttComposite"
            name="Merge RTT Models">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.core.variables.valueVariables">
      <variable
            description="Orocos Includes"
            initialValue="/opt/ros/electric/stacks/orocos_toolchain/install/include"
            name="OROCOS_INCLUDE"
            readOnly="true">
      </variable>
   </extension>

</plugin>
