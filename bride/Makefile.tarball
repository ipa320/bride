all: installed

UNPACK_CMD  	= tar zxf
SOURCE_DIR 	= build/eclipse
#32 bit version
TARBALL		= build/eclipse-modeling-kepler-SR1-linux-gtk.tar.gz
TARBALL_URL 	= http://ftp-stud.fht-esslingen.de/pub/Mirrors/eclipse/technology/epp/downloads/release/kepler/SR1/eclipse-modeling-kepler-SR1-linux-gtk.tar.gz
MD5SUM_FILE 	= eclipse-modeling-kepler-SR1-linux-gtk.tar.gz.md5sum

#64 bit version
ARCH = $(shell uname -m)
ifeq ($(ARCH),x86_64)
	TARBALL		= build/eclipse-modeling-kepler-SR1-linux-gtk-x86_64.tar.gz
	TARBALL_URL 	= http://ftp-stud.fht-esslingen.de/pub/Mirrors/eclipse/technology/epp/downloads/release/kepler/SR1/eclipse-modeling-kepler-SR1-linux-gtk-x86_64.tar.gz
	MD5SUM_FILE 	= eclipse-modeling-kepler-SR1-linux-gtk-x86_64.tar.gz.md5sum	
endif

SYSNAME = $(shell uname)
ifeq ($(SYSNAME),Darwin)
        TARBALL         = build/eclipse-modeling-kepler-SR1-macosx-cocoa-x86_64.tar.gz
        TARBALL_URL     = http://ftp-stud.fht-esslingen.de/pub/Mirrors/eclipse/technology/epp/downloads/release/kepler/SR1/eclipse-modeling-kepler-SR1-macosx-cocoa-x86_64.tar.gz
        MD5SUM_FILE     = eclipse-modeling-kepler-SR1-macosx-cocoa-x86_64.tar.gz.md5sum
endif

url 	= http://bride.cybernotic.org/eclipse_plugins_0.2.yaml
outputfile  	= eclipse_plugins.yaml


include ./download_unpack_build.mk

installed: $(SOURCE_DIR)/unpacked
	if test -d eclipse; then echo "Updating eclipse installation" && ./installer.py eclipse_plugins.yaml; else echo "Installing from scratch" && mv build/eclipse eclipse && ./installer.py eclipse_plugins.yaml; fi

update:
	./installer.py -u eclipse_plugins.yaml

clean:
	rm -rf $(SOURCE_DIR) $(TARBALL) build
